#titlepage_menu_btns_grp {
    width: auto;
    background: $boost;
    margin-top: 2;
    /* padding: 1; */
}

#titlescreen {
    width: 100%;
    height: 100%;
    align: center middle;
}

#title_label {
    text-align: center;
    margin-bottom: 2;
}

#game_title {
    width: 100%;
    height: auto;
    border: solid $accent;
    align: center middle;
    content-align: center middle;
    padding: 1;
    margin-bottom: 0;
}

#date_season_display {
    width: 100%;
    height: auto;
    align: center middle;
    content-align: center middle;
    padding: 0;
    background: $surface;
}

#date_season_label {
    text-align: center;
    text-style: bold;
    color: $text-muted;
}

.task_list {
    border: solid $warning;
    min-width: 5%;
    max-width: 15%;
    height: 100%;
    min-height: 15;
    margin: 1;
    padding: 1;
}

#tasks_title {
    text-style: bold;
    margin-bottom: 1;
}

JournalEntry {
    border: solid $primary;
    margin-bottom: 1;
    padding: 1;
}

Journal {
    height: 60%;
    min-height: 15;
    min-width: 15%;
    max-width: 20%;
    margin: 1;
    padding: 1;
}

.task_grid_list {
    layout: grid;
    grid-size: 3 4;
    grid-rows: 1fr 1fr 1fr 1fr;
    grid-columns: 1fr 3fr 1fr;
    width: 100%;
    height: auto;
    min-height: 12;
    grid-gutter: 1;
}

.task_id, .task_cost {
    text-style: bold;
    color: $success;
}

.farmplot {
    layout: grid;
    grid-size: 4 4;
    grid-rows: 1fr 1fr 1fr 1fr;
    grid-columns: 1fr 1fr 1fr 1fr;
    width: auto;
    min-width: 20%;
    height: auto;
    min-height: 20;
    border: solid green;
    margin: 1;
    padding: 1;
    grid-gutter: 1;
}

.sector {
    height: 100%;
    width: 100%;
    min-height: 4;
    min-width: 4;
    border: solid $primary;
    background: $surface;
    color: $text;
    content-align: center middle;
    padding: 1;
}

.sector:hover {
    background: $primary-lighten-2;
    color: $text;
}

#command_input {
    margin: 1;
    width: 80%;
}

#back_btn {
    margin: 1;
    width: auto;
}

HelpModal {
    align: center middle;
}

HelpModal > Container {
    width: 70%;
    height: auto;
    background: $surface;
    border: solid $accent;
    padding: 2;
    min-width: 40;
    max-width: 60;
}

#help_title {
    width: 100%;
    text-align: center;
    text-style: bold;
    margin-bottom: 2;
}

#ok_btn {
    margin-top: 2;
    width: auto;
    align-horizontal: center;
}

SeasonStatsModal {
    align: center middle;
}

SeasonStatsModal > Container {
    width: 70%;
    height: auto;
    background: $surface;
    border: solid $accent;
    padding: 2;
    min-width: 40;
    max-width: 60;
}

#season_stats_title {
    width: 100%;
    text-align: center;
    text-style: bold;
    margin-bottom: 2;
}

#tabs_container {
    width: 100%;
    height: 60%;
    min-height: 20;
    margin-bottom: 1;
}

TabbedContent {
    width: 100%;
    height: 100%;
    border: solid $accent;
}

TabPane {
    padding: 1;
}

TabbedContent > .tabbed-content--tabs {
    background: $surface;
    border-bottom: solid $accent;
}

TabbedContent > .tabbed-content--tabs > .tab--active {
    background: $primary;
    color: $text;
}

TabbedContent > .tabbed-content--content {
    width: 100%;
    height: 100%;
}
